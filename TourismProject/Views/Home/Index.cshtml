@model TourismProject.Models.HomeViewModel

@{
    ViewBag.Title = "Home";
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Tourism Platform</title>
    <link rel="stylesheet" href="~/Content/style.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
    <link href="https://unpkg.com/aos@2.3.4/dist/aos.css" rel="stylesheet">
    <script src="https://unpkg.com/aos@2.3.4/dist/aos.js"></script>
    <script>AOS.init();</script>
</head>

<body>
    <header class="hero">
        <div class="hero-content">
            <h1>Discover Your Next Adventure</h1>
            <p>Explore top destinations, curated travel packages, and unforgettable experiences—all in one place.</p>
            <a href="@Url.Action("Login", "Account")" class="btn-primary">Start Your Journey</a>
        </div>
    </header>

    <section class="features-wrapper">
        <h2 class="section-heading">Why Choose Us?</h2>
        <div class="features-container">
            <div class="feature-card">
                <i class="fas fa-shield-alt"></i>
                <h3>Trusted Agencies</h3>
                <p>We partner with the most reliable travel agencies and guides to offer you the best experiences.</p>
            </div>
            <div class="feature-card">
                <i class="fas fa-suitcase-rolling"></i>
                <h3>Tailored Packages</h3>
                <p>Explore custom travel packages designed to match your interests and budget.</p>
            </div>
            <div class="feature-card">
                <i class="fas fa-star"></i>
                <h3>Expert Recommendations</h3>
                <p>Get recommendations from seasoned experts to create the perfect itinerary for your travels.</p>
            </div>
        </div>
    </section>

    <section class="explore" data-aos="zoom-in" data-aos-duration="1000">
        <h2>Ready to Explore?</h2>
        <p>Whether you're seeking adventure, relaxation, or culture, we've got the perfect destination for you. Start your journey today!</p>
        <a href="@Url.Action("Index", "TourPackages")" class="btn-primary">Find Your Tour</a>
    </section>

    <section class="testimonials">
        <h2>What Our Travelers Say</h2>
        <div class="testimonials-boxes">
            <div class="testimonial">
                <div class="testimonial-icon">
                    <i class="fas fa-quote-left"></i>
                </div>
                <div class="testimonial-content">
                    <p>“This platform made booking my vacation seamless! I had the best time with my family, thanks to their amazing tour packages!”</p>
                    <span>— Jane Doe, Traveler</span>
                </div>
            </div>
            <div class="testimonial">
                <div class="testimonial-icon">
                    <i class="fas fa-quote-left"></i>
                </div>
                <div class="testimonial-content">
                    <p>“A wonderful experience. The trip was well organized, and I felt supported every step of the way.”</p>
                    <span>— John Smith, Traveler</span>
                </div>
            </div>
            <div class="testimonial">
                <div class="testimonial-icon">
                    <i class="fas fa-quote-left"></i>
                </div>
                <div class="testimonial-content">
                    <p>“I loved every moment of my trip! The itinerary was perfectly planned and executed. I highly recommend it!”</p>
                    <span>— Sarah Lee, Traveler</span>
                </div>
            </div>
        </div>
    </section>

    <section class="photo-gallery">
        <h2>Explore Our Beautiful Destinations</h2>
        <div id="carouselExampleCaptions" class="carousel slide" data-bs-ride="carousel">
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img src="/Content/images/destination1.jpg" class="d-block w-100" alt="Hangzhou Lake Pavillon">
                    <div class="carousel-caption d-none d-md-block">
                        <h5>Hangzhou Lake Pavillon</h5>
                        <p>Discover the beauty of this place!</p>
                    </div>
                </div>
                <div class="carousel-item">
                    <img src="/Content/images/destination2.jpeg" class="d-block w-100" alt="Thailand">
                    <div class="carousel-caption d-none d-md-block">
                        <h5>Thailand</h5>
                        <p>Experience culture and adventure.</p>
                    </div>
                </div>
                <div class="carousel-item">
                    <img src="/Content/images/destination3.jpg" class="d-block w-100" alt="Dubai">
                    <div class="carousel-caption d-none d-md-block">
                        <h5>Dubai</h5>
                        <p>Relax in paradise!</p>
                    </div>
                </div>
            </div>
            <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Next</span>
            </button>
        </div>
    </section>
    <section class="group-members">
        <h2>Group Members</h2>
        <table class="members-table">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Role</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>John Mark</td>
                    <td>Developer</td>
                </tr>
                <tr>
                    <td>Renz Hendrix</td>
                    <td>Developer</td>
                </tr>
                <tr>
                    <td>Ranz Hendrick</td>
                    <td>Pinakabobo</td>
                </tr>
                <tr>
                    <td>John Paul</td>
                    <td>Developer</td>
                </tr>
                <tr>
                    <td>Eli Esma</td>
                    <td>Developer</td>
                </tr>
            </tbody>
        </table>
    </section>

    <footer>
    </footer>
</body>
</html>