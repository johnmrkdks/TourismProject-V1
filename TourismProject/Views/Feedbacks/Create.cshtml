@model TourismProject.Models.Feedback

@{
    ViewBag.Title = "Create Feedback";
}

<div class="container mt-4">
    <div class="card shadow rounded-4 p-4">
        <h2 class="mb-4 text-center">Leave Feedback</h2>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            @Html.ValidationSummary(true, "", new { @class = "text-danger mb-3" })

            <div class="mb-3">
                @Html.LabelFor(model => model.TourPackageId, "Tour Package", new { @class = "form-label fw-semibold" })
                @Html.DropDownList("TourPackageId", null, htmlAttributes: new { @class = "form-select rounded" })
                @Html.ValidationMessageFor(model => model.TourPackageId, "", new { @class = "text-danger" })
            </div>

            <div class="mb-3">
                @Html.LabelFor(model => model.Rating, new { @class = "form-label fw-semibold" })
                @Html.EditorFor(model => model.Rating, new { htmlAttributes = new { @class = "form-control rounded", type = "number", min = "1", max = "5" } })
                @Html.ValidationMessageFor(model => model.Rating, "", new { @class = "text-danger" })
            </div>

            <div class="mb-3">
                @Html.LabelFor(model => model.Comment, new { @class = "form-label fw-semibold" })
                @Html.TextAreaFor(model => model.Comment, new { @class = "form-control rounded", rows = 4 })
                @Html.ValidationMessageFor(model => model.Comment, "", new { @class = "text-danger" })
            </div>

            <div class="mb-3">
                @Html.LabelFor(model => model.SubmittedDate, new { @class = "form-label fw-semibold" })
                @Html.TextBoxFor(model => model.SubmittedDate, "{0:yyyy-MM-dd}", new { @class = "form-control rounded", type = "date" })
                @Html.ValidationMessageFor(model => model.SubmittedDate, "", new { @class = "text-danger" })
            </div>

            <div class="d-flex justify-content-between">
                <a href="@Url.Action("Index")" class="btn btn-outline-secondary">Back</a>
                <input type="submit" value="Submit Feedback" class="btn btn-primary" />
            </div>
        }
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
